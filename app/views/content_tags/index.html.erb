<% content_for :title do %>Content<% end %>
<h1>Listing Tags</h1>

<table width=100%>
  <tr>
    <th>Created</th>
		<th>Updated</th>
		<th>Name</th>
		<th>Page?</th>
  </tr>

<% @tags.each do |tag| %>
  <tr>
    <td valign="top"><%=h tag.created_at %></td>
		<td><%=h tag.updated_at %></td>
		<td><%=h tag.name %></td>
		<td><%=h tag.page? %></td>
    <td><%= link_to 'Show', tag %> <%= link_to 'Edit', edit_content_tag_path(tag) %> <%= link_to 'Destroy', tag, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Tag', new_content_tag_path %>